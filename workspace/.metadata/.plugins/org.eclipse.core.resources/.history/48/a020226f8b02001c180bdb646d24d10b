	@Override
	protected void collectNewChildDescriptors(Collection<Object> newChildDescriptors, Object object) {
		super.collectNewChildDescriptors(newChildDescriptors, object);

		newChildDescriptors.add
			(createChildParameter
				(MetamodelPackage.Literals.CLASS_ELEMENT__GLOBAL_VARIABLE_DEFS,
				 MetamodelFactory.eINSTANCE.createGlobalVariable()));

		newChildDescriptors.add
			(createChildParameter
				(MetamodelPackage.Literals.CLASS_ELEMENT__LOCAL_VARIABLES,
				 MetamodelFactory.eINSTANCE.createLocalVariable()));
	}

